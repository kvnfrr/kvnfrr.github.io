---
export interface Props {
  backgroundImage: string;
}
const { backgroundImage } = Astro.props;
import '../styles/global.css';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>KVN Portfolio</title>
    <script defer src="https://unpkg.com/alpinejs@3.13.0/dist/cdn.min.js"></script>
  </head>
  <body class="relative min-h-screen bg-black text-white overflow-hidden">
    <!-- Background -->
    <img
      src={backgroundImage}
      alt=""
      class="fixed top-0 left-0 w-screen h-screen object-cover blur brightness-50 z-[-1]"
      style="object-position: center;"
    />

    <!-- Page content -->
    <main class="relative z-10">
      <slot />
    </main>
  </body>
</html>
