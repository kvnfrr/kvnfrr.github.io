---
import { Icon as AstroIcon } from "astro-icon/components";

interface Props {
  name: string;
  size?: number | string;
  class?: string;
  style?: string;
  [key: string]: any;
}

const {
  name,
  size = 20,
  class: klass = "",
  style,
  ...rest
} = Astro.props as Props;
---

<AstroIcon
  name={name}
  width={size}
  height={size}
  class={`inline-block ${klass}`}
  style={style}
  {...rest}
/>
