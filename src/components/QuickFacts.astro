---
import Icon from "./ui/Icon.astro";
import { quickFacts } from "../data/quickFacts";
---

<section id="quick-facts" class="mt-8">
  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 max-w-3xl">
    {
      quickFacts.map((f, i) => (
        <div
          class="group rounded-2xl bg-white/5 border border-white/10 px-5 py-4 hover:bg-white/[0.07] transition fade-in"
          style={`--delay: ${600 + i * 100}ms`}
        >
          <div class="flex items-center gap-3">
            <Icon name={f.icon} class="text-zinc-300" />
            <div>
              <div class="text-3xl font-extrabold text-white tabular-nums">
                {f.value}
              </div>
              <div class="text-[11px] uppercase tracking-wide text-zinc-400">
                {f.label}
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
