---
import Icon from "./ui/Icon.astro";
import { quickFacts } from "../data/quickFacts";
---

<section id="quick-facts" class="mt-10">
  <div
    class="mx-auto max-w-4xl grid grid-cols-1 sm:grid-cols-3 gap-6"
    role="list"
  >
    {
      quickFacts.map((f, i) => (
        <div
          role="listitem"
          class="group rounded-2xl bg-white/5 border border-white/10 px-6 py-5
               flex flex-col items-center justify-center text-center gap-2
               hover:bg-white/10 transition fade-in"
          style={`--delay: ${600 + i * 100}ms`}
        >
          <div class="flex items-center justify-center gap-2 leading-none">
            <Icon
              name={f.icon}
              size={22}
              class="text-sky-400 opacity-90"
              aria-hidden="true"
            />
            <span class="text-3xl md:text-4xl font-extrabold text-white tabular-nums">
              {f.value}
            </span>
          </div>

          {/* Label */}
          <span class="text-[11px] md:text-xs uppercase tracking-[0.2em] text-zinc-400">
            {f.label}
          </span>
        </div>
      ))
    }
  </div>
</section>
