---
import Icon from "./ui/Icon.astro";
import Typewriter from "./ui/Typewriter.astro";

interface Props {
  title: string;
  description: string;
  subtitle?: string;
  phrases?: string[];
  name?: string;
}

const {
  title,
  description,
  subtitle,
  phrases = [
    "Professional Night Owl",
    "Born for Backend, Forced to Full-stack",
    "Cliché Subheading",
    "What deadline?",
  ],
  name = "Kevin Ferrer",
} = Astro.props;
---

<article
  class="col-span-12 lg:col-span-8 2xl:col-span-9 rounded-2xl bg-[#131516]/80 backdrop-blur-sm border border-white/10 p-6 md:p-10 relative h-[68vh] fade-in"
  style="--delay: 80ms"
>
  <!-- Pen / edit -->
  <button
    class="absolute right-6 top-6 text-sky-400/90 fade-in"
    style="--delay: 320ms"
    aria-label="Edit"
  >
    <Icon name="lucide:pen-line" size={20} class="opacity-90" />
  </button>

  <!-- Centered content block -->
  <div
    class="h-full w-full flex flex-col items-center justify-center text-center"
  >
    <!-- Intro -->
    <p
      class="fade-in text-2xl md:text-3xl text-zinc-300/90 tracking-wide"
      style="--delay: 360ms"
    >
      Hi, I’m <span class="font-bold text-white">{name}</span>
    </p>

    <!-- Title -->
    <h1
      class="fade-in mt-3 text-5xl sm:text-6xl md:text-7xl font-extrabold tracking-tight"
      style="--delay: 400ms"
    >
      <span
        class="bg-gradient-to-r from-sky-400 via-cyan-300 to-sky-500 bg-clip-text text-transparent"
      >
        {title}
      </span>
    </h1>

    <!-- Subtitle -->
    <h2
      class="fade-in mt-5 text-3xl sm:text-4xl md:text-5xl font-semibold text-zinc-100"
      style="--delay: 460ms"
    >
      {
        subtitle ? (
          subtitle
        ) : (
          <Typewriter
            phrases={phrases}
            startDelay={350}
            speed={45}
            backspaceSpeed={28}
            hold={1200}
            loop={true}
          />
        )
      }
    </h2>

    <!-- Description -->
    <p
      class="fade-in mt-6 max-w-3xl text-zinc-400/90 text-lg md:text-xl leading-relaxed"
      style="--delay: 520ms"
    >
      {description}
    </p>

    <!-- Quick facts -->
    <div class="fade-in mt-10 w-full max-w-3xl" style="--delay: 580ms">
      <slot />
    </div>
  </div>
</article>
