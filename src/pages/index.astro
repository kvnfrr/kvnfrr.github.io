---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import PhotoCard from "../components/PhotoCard.astro";
import QuickFacts from "../components/QuickFacts.astro";
import SocialLinks from "../components/SocialLinks.astro";
import ScrollHint from "../components/ScrollHint.astro";
import GitHubWidget from "../components/ui/GitHubWidget.astro";
---

<MainLayout title="kvnfrr â€” Software Developer">
  <Header />

  <main id="home" class="px-4 lg:px-6">
    <div class="mx-auto max-w-[1650px] 2xl:max-w-[1800px]">
      <!-- Hero Grid -->
      <section class="mt-6 grid grid-cols-12 gap-6 lg:gap-8">
        <Hero
          title="SOFTWARE DEVELOPER"
          description={`Before I started coding professionally, I spent a ton of time tweaking game files just to see what would happen. 
          That spark for experimentation never left; instead, it evolved into building real-world software and bringing creative ideas to life.`}
        >
          <QuickFacts />
        </Hero>

        <PhotoCard
          src="/photo.jpg"
          alt="Kevin Ferrer"
          title="Kevin Ferrer"
          subtitle="sample text"
        >
          <GitHubWidget slot="footer" username="kvnfrr" />
        </PhotoCard>
      </section>

      <SocialLinks />
    </div>

    <ScrollHint />

    <!-- Anchor placeholders -->
    <section id="about" class="h-24"></section>
    <section id="skills" class="h-24"></section>
    <section id="projects" class="h-24"></section>
    <section id="experience" class="h-24"></section>
    <section id="contact" class="h-24"></section>
  </main>
</MainLayout>
