---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
  <!-- HOME SECTION -->
  <section
    id="home"
    class="min-h-screen flex items-center justify-center relative"
  >
    <!-- Large hero container with text & image side by side -->
    <div
      class="w-full max-w-4xl mx-auto flex flex-col md:flex-row items-center md:items-stretch justify-center"
    >
      <!-- Intro Text -->
      <div class="md:w-1/2 flex flex-col justify-center items-start px-4 md:px-6 fade-in">
        <h1 class="text-3xl sm:text-5xl font-bold mb-4">
          Hello, I'm <span class="text-accent-green">Kevin Ferrer</span>
        </h1>
        <p class="text-base sm:text-lg mb-6 opacity-90">
          I specialize in building modern, efficient, and techy web experiences.
        </p>
        <!-- Possibly add a scroll-down indicator below -->
      </div>

      <!-- Hero Image with green border -->
      <div class="md:w-1/2 flex justify-center items-center fade-in">
        <img
          src="/hero.jpg"
          alt="Kevin Ferrer"
          class="max-w-xs md:max-w-sm lg:max-w-md rounded-md border-4 border-accent-green"
        />
      </div>
    </div>

    <!-- Scroll-down arrow (optional) -->
    <div class="absolute bottom-6 text-center animate-bounce fade-in">
      <a href="#about" class="hover:opacity-75 inline-block">
        <img src="/scroll-down-arrow.svg" alt="Scroll down" class="w-6 h-6 mx-auto" />
      </a>
    </div>
  </section>

  <!-- ABOUT SECTION -->
  <section
    id="about"
    class="py-16 fade-in px-4 md:px-6"
    style="background-color: #1A1A1A;"
  >
    <div
      class="max-w-4xl mx-auto rounded-lg bg-terminal-gray p-6 md:p-8 text-center"
    >
      <h2 class="text-3xl font-bold mb-4">About Me</h2>
      <p class="leading-relaxed mb-4 opacity-90">
        I'm Kevin Ferrer, a developer passionate about creating sleek, efficient, and accessible web applications.
        I love solving complex problems and mastering new technologies in the rapidly evolving tech industry.
      </p>
      <p class="leading-relaxed opacity-90">
        Outside of coding, you can find me exploring new coffee shops or playing guitar.
      </p>
    </div>
  </section>

  <!-- PROJECTS SECTION -->
  <section
    id="projects"
    class="py-16 fade-in px-4 md:px-6"
    style="background-color: #242424;"
  >
    <div class="max-w-4xl mx-auto rounded-lg bg-terminal-gray p-6 md:p-8">
      <h2 class="text-3xl font-bold mb-6 text-center">Projects</h2>
      <div class="grid gap-6 md:grid-cols-2">
        <!-- Example Project -->
        <div class="bg-section-grey-2 rounded-lg p-4 hover:shadow-lg transition-shadow">
          <h3 class="font-semibold text-accent-green mb-2">Project Title</h3>
          <p class="text-sm opacity-90 mb-4">
            Brief description of your project. Tech stack, challenges, etc.
          </p>
          <a
            href="#"
            target="_blank"
            class="text-sm underline hover:opacity-80"
          >
            View Project
          </a>
        </div>
        <!-- Add more projects as needed -->
        <div class="bg-section-grey-2 rounded-lg p-4 hover:shadow-lg transition-shadow">
          Another Project...
        </div>
      </div>
    </div>
  </section>

  <!-- EXPERIENCE SECTION -->
  <section
    id="experience"
    class="py-16 fade-in px-4 md:px-6"
    style="background-color: #2E2E2E;"
  >
    <div class="max-w-4xl mx-auto rounded-lg bg-terminal-gray p-6 md:p-8">
      <h2 class="text-3xl font-bold mb-4 text-center">Experience</h2>
      <div class="flex flex-col space-y-6">
        <!-- Job 1 -->
        <div class="bg-section-grey-3 p-4 rounded-lg">
          <h3 class="font-semibold text-lg text-accent-green">Company / Position</h3>
          <p class="text-sm opacity-80">Jan 2020 - Present</p>
          <p class="text-sm mt-2 opacity-90">
            Describe your role, responsibilities, and achievements.
          </p>
        </div>
        <!-- Job 2 -->
        <div class="bg-section-grey-3 p-4 rounded-lg">
          <h3 class="font-semibold text-lg text-accent-green">Previous Company / Position</h3>
          <p class="text-sm opacity-80">2018 - 2019</p>
          <p class="text-sm mt-2 opacity-90">
            Describe your role, responsibilities, and achievements.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTACT SECTION -->
  <section
    id="contact"
    class="py-16 fade-in px-4 md:px-6"
    style="background-color: #383838;"
  >
    <div class="max-w-4xl mx-auto rounded-lg bg-terminal-gray p-6 md:p-8 text-center">
      <h2 class="text-3xl font-bold mb-4">Contact</h2>
      <p class="opacity-90 mb-6">
        Let's connect! Hereâ€™s how you can reach me:
      </p>

      <!-- Email -->
      <p class="mb-4">kevinferrer@example.com</p>

      <!-- LinkedIn & GitHub -->
      <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-8">
        <a
          href="https://linkedin.com/in/KevinFerrer"
          target="_blank"
          rel="noopener noreferrer"
          class="underline hover:opacity-75"
        >
          LinkedIn
        </a>
        <a
          href="https://github.com/KevinFerrer"
          target="_blank"
          rel="noopener noreferrer"
          class="underline hover:opacity-75"
        >
          GitHub
        </a>
      </div>
    </div>
  </section>
</MainLayout>
