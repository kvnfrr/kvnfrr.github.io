      .background-image { background-image: url('/background.png'); background-size: cover; background-position: center; opacity: 1; transition: opacity 2s ease-in-out; }
      @keyframes floatParticles { from { background-position: 0% 0%; } to { background-position: 100% 100%; } }

      /* Active link */
