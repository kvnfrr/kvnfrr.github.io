---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import PhotoCard from "../components/PhotoCard.astro";
import QuickFacts from "../components/QuickFacts.astro";
import SocialLinks from "../components/SocialLinks.astro";
import ScrollHint from "../components/ScrollHint.astro";
---

<MainLayout title="kvnfrr — Software Developer">
  <Header />

  <main id="home" class="px-4 lg:px-6">
    <div class="mx-auto max-w-[1650px] 2xl:max-w-[1800px]">
      <!-- Hero Grid -->
<section class="mt-6 grid grid-cols-12 gap-6 lg:gap-8">
  <Hero
    title="SOFTWARE DEVELOPER"
    description="Super Cool Description Super Cool Description Super Cool Description"
  >
    <QuickFacts />
  </Hero>

  <PhotoCard
    src="/photo.jpg"
    alt="Kevin Ferrer"
    title="Kevin Ferrer"
    subtitle="Full-stack developer (React + Java/Spring). San Jose, CA · Open to internships Summer 2026"
  />
</section>


      <SocialLinks />
    </div>

    <ScrollHint />

    <!-- Anchor placeholders -->
    <section id="about" class="h-24"></section>
    <section id="skills" class="h-24"></section>
    <section id="projects" class="h-24"></section>
    <section id="experience" class="h-24"></section>
    <section id="contact" class="h-24"></section>
  </main>
</MainLayout>
